name: Rebuild Azure VM with Scripts

on:
  workflow_dispatch:

jobs:
  rebuild:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Login to Azure
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Make script executable
        run: chmod +x ./rebuild-vm.sh

      - name: Rebuild Azure VM with Script
        run: ./rebuild-vm.sh
